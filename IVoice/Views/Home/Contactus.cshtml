@model IVoice.ViewModel.ContactUsViewModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

    <title>Contact Us</title>
    <link href="~/css/contactus.css" rel="stylesheet" />

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

  <!-- font awesome style -->
  <link href="~/css/font-awesome.min.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="~/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="~/css/responsive.css" rel="stylesheet" />
   
</head>

<body class="sub_page">

  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <span>
                            IVOICE
                        </span>
                    </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class=""> </span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        @if (User.Identity.IsAuthenticated == true)
                        {
                            <ul class="navbar-nav  ">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Product" asp-action="Index"> Products</a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Role" asp-action="Index">Roles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Product" asp-action="Products">Manage Products</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Contactus"> Contact us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="aboutus"> About us</a>
                                    </li>
                                }



                            </ul>
                        }
            <div class="quote_btn-container">
                            <ul class="navbar-nav  ">
                                @if (User.Identity.IsAuthenticated == false)
                                {
                                    <li class="nav-item">
                                        <a asp-controller="Account" asp-action="Login" class="quote_btn">
                                            Login
                                        </a>
                                    </li>

                                    <!-- Add space between buttons -->
                                    <span style="margin-right: 10px;"></span>
                                    <li class="nav-item">
                                        <a asp-controller="Account" asp-action="Register" class="quote_btn">
                                            Register
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    @if (User.IsInRole("User"))
                                    {
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/Cart/GetUserCart">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                                </svg>
                                            </a>
                                        </li>

                                    }
                                    <span style="margin-right: 10px;"></span>
                                    <li class="nav-item">
                                        <a class="quote_btn" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                                    <span style="margin-right: 10px;"></span>
                                    @if (User.IsInRole("User"))
                                    {
                                        <li class="nav-item">
                                            <a class="quote_btn" asp-controller="UserOrder" asp-action="UserOrders">welcome @User.Identity.Name</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="quote_btn" href="#">welcome @User.Identity.Name</a>
                                        </li>
                                    }
                                }
                            </ul>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <!-- contact section -->

  <section class="contact_section layout_padding" style="padding:0">
    <div class="container-fluid">
      <div class="row">
        <!-- Photo Column -->
        <div class="col-md-6">
          <div class="img-box">
                        <img src="/images/slider-img.png" alt="">
          </div>
        </div>
        <!-- Form Column -->
        <div class="col-md-5 col-lg-4 offset-md-1">
          <div class="form_container">
            <div class="heading_container">
              <h2>Give Us Your Feedback</h2>
            </div>
           <form asp-action="Contactus" method="post" enctype="multipart/form-data">
              <div>
               <input asp-for="Name" placeholder="Full Name" required="required" />
                <span asp-validation-for="Name" class="text-danger"></span>
               </div>
              <div>
               <input asp-for="Email" placeholder="Email" required="required" />
              <span asp-validation-for="Email" class="text-danger"></span>
              </div>
                <div>
               <input asp-for="PhoneNumber" placeholder="Phone number" required="required" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
               </div>
              <div>
             <input asp-for="Feedback" class="message-box" placeholder="Message" required="required" />
               <span asp-validation-for="Feedback" class="text-danger"></span>
              </div>
              <div class="d-flex">
                <button type="submit">SEND</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

</body>

</html>