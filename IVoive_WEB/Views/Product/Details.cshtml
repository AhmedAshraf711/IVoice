@model Cart

@{
    ViewData["Title"] = "Details";
}
<form method="post">

<h1>Details</h1>

<div>
    <h4>ProductViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Count" type="number" value="1" class="form-control text-end"
                   aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Cover)
        </dt>
        <dd class = "col-sm-10">
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagePath}/{Model.Product.Cover}")" alt="@Model.Product.Cover" class="w-100" />
            </div>
        </dd>
    </dl>
</div>
<div>
    <div>
        @Html.ActionLink("Update", "Update", new { id = Model.ProductId}) |
        <a asp-action="Index">Back to List</a>
            <button type="submit"
                    class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                Add to Cart
            </button>
        </div>


</div>
</form>
